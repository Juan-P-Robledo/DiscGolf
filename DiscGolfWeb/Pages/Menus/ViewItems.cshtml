@model DiscGolfWeb.Pages.Menus.ViewItemsModel
@{
   // Layout = HttpContext.User.Identity.IsAuthenticated ? "_LayoutAuthenticated" : "_Layout";
    string layout;
    if (HttpContext.User.Identity.IsAuthenticated)
    {
        if (HttpContext.User.HasClaim("isAdmin", "True"))
        {
            layout = "_AdminLayout"; // Use the admin layout for users with admin privilege
        }
        else
        {
            layout = "_LayoutAuthenticated"; // Use the regular authenticated layout
        }
    }
    else
    {
        layout = "_Layout"; // Use the default layout for unauthenticated users
    }
    Layout = layout;
}
<form method="post" class="form-group">
    <div class="row m-2">
        <div class="col-2">
            <label class="form-label">Category</label>
        </div>
        <div class="col-8">
            <select asp-for="SelectedID" asp-items="Model.Categories"></select>
        </div>
        <div class="col-2">
            <button class="btn btn-primary" id="btnView">Display</button>
        </div>
    </div>
    @foreach (var Item in Model.DiscItems)
    {
        <div id="Info" class="m-2">
            <div class="col-2">
                <label class="form-label" asp-for="@Item.ItemCode"></label>
                <label class="form-label">@Item.ItemCode</label>
            </div>
            <div class="col-2">
                <label class="form-label" asp-for="@Item.ItemName"></label>
                <label class="form-label">@Item.ItemName</label>
            </div>
            <div class="col-2">
                <label class="form-label" asp-for="@Item.ItemDescription"></label>
                <label class="form-label">@Item.ItemDescription</label>
            </div>
            <div class="col-2">
                <label class="form-label" asp-for="@Item.ItemPrice"></label>
                <label class="form-label">@Item.ItemPrice</label>
            </div>
            <div class="col-3">
                <label class="form-label" asp-for="@Item.ItemBrand"></label>
                <label class="form-label">@Item.ItemBrand</label>
            </div>
            <div class="col-3">
                <label class="form-label" asp-for="@Item.ItemCategory"></label>
                <label class="form-label">@Item.ItemCategory</label>
            </div>
            <div class="col-3">
                <label class="form-label" asp-for="@Item.ItemImage"></label>
                <img src="@Item.ItemImage" alt="Product Image" width="100" height="100" />
            </div>
            <div class="col-3">
                <a asp-page="EditItem" asp-route-id="@Item.ItemID" id="btnEdit" class="btn btn-primary">Edit</a>
            </div>
        </div>
    }
</form>

