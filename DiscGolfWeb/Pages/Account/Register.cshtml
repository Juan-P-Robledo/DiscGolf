@page
@model DiscGolfWeb.Pages.Account.RegisterModel
@{
}
<style>
    body {
        background-image: url('https://i.pinimg.com/736x/91/b7/f5/91b7f5e0c42251f849fe21b0332877a8.jpg'); /* Specify 	the URL of your image */
        background-size: cover;
        background-repeat: no-repeat;
        background-position: center;
        color: white;
        font-family: Arial, sans-serif;
        margin: 0;
        display: flex;
        height: 100vh;
        flex-direction: column;
        background-color: rgba(0, 0, 0, 0.2);
    }

    form {
        background-color: rgba(194,219,189,255);
        border: 5px solid rgba(97,130,109,255);
        border-radius: 10px;
        color: rgba(29,50,53,255);
        align-items: center;
        white-space: nowrap;
        max-width: 750px;
        margin: 0 auto;
    }

    label {
        display: block;
        margin-bottom: 8px;
    }

    input {
        width: 100%;
        padding: 8px;
        margin-bottom: 16px;
        box-sizing: border-box;
    }

    #btnRegister {
        background-color: rgba(97,130,109,255);
        color: white;
        padding: 5px 5px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

    h1 {
        text-align: center;
    }

    .image-container {
        text-align: center; /* Center align its contents horizontally */
    }
</style>

<form method="post">

    
    <div class="row m-2">
            <div class="col-3">
                <label asp-for="NewPerson.FirstName" class="form-label"></label>
            </div>
        
        <div class="col-10">
            <input asp-for="NewPerson.FirstName" type="text" class="form-control" />
            <span asp-validation-for="NewPerson.FirstName" class="text-danger"></span>
        </div>
    </div>
    <div class="row m-2">

        <div class="col-3">
            <label asp-for="NewPerson.LastName" class="form-label"></label>
        </div>
        <div class="col-10">
            <input asp-for="NewPerson.LastName" type="text" class="form-control" />
            <span asp-validation-for="NewPerson.LastName" class="text-danger"></span>
        </div>
     </div>
     <div class="row m-2">
        <div class="col-3">
            <label asp-for="NewPerson.Email" class="form-label"></label>
        </div>
        <div class="col-10">
            <input asp-for="NewPerson.Email" type="text" class="form-control" />
            <span asp-validation-for="NewPerson.Email" class="text-danger"></span>
        </div>
     </div>
     <div class="row m-2">
        <div class="col-3">
            <label asp-for="NewPerson.Password" class="form-label"></label>
        </div>
        <div class="col-10">
            <input asp-for="NewPerson.Password" type="password" class="form-control" />
            <span asp-validation-for="NewPerson.Password" class="text-danger"></span>
        </div>
     </div>
     <div class="row m-2">
        <div class="col-3">
            <label asp-for="NewPerson.Phone" class="form-label"></label>
        </div>
        <div class="col-10">
            <input asp-for="NewPerson.Phone" type="text" class="form-control" />
            
        </div>
    </div>
  
    <div class="row m-2">
        <div class="col-3">
            <button id="btnRegister" class="btn btn-primary">Register</button>
        </div>
    </div>
</div>

</form>
