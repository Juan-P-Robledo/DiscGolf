@page
@model DiscGolfWeb.Pages.Item.AddItemModel
@{
   // Layout = HttpContext.User.Identity.IsAuthenticated ? "_LayoutAuthenticated" : "_Layout";
    string layout;
    if (HttpContext.User.Identity.IsAuthenticated)
    {
        if (HttpContext.User.HasClaim("isAdmin", "True"))
        {
            layout = "_AdminLayout"; // Use the admin layout for users with admin privilege
        }
        else
        {
            layout = "_LayoutAuthenticated"; // Use the regular authenticated layout
        }
    }
    else
    {
        layout = "_Layout"; // Use the default layout for unauthenticated users
    }
    Layout = layout;
}
<form method="post"class="form-group">
    <div class="row m-2">
        <div class="col-2">
            <label asp-for="newItem.ItemCode"></label>
        </div>
        <div class="col-10">
            <input type="text" class="form-control" asp-for="newItem.ItemCode" />
        </div>

    </div>
    <div class="row m-2">
        <div class="col-2">
            <label asp-for="newItem.ItemName"></label>
        </div>
        <div class="col-10">
            <input type="text" class="form-control" asp-for="newItem.ItemName" />
        </div>

    </div>
    <div class="row m-2">
        <div class="col-2">
            <label asp-for="newItem.ItemDescription"></label>
        </div>
        <div class="col-10">
            <textarea class="form-control" asp-for="newItem.ItemDescription"></textarea>
        </div>

    </div>
    <div class="row m-2">
        <div class="col-2">
            <label asp-for="newItem.ItemPrice"></label>
        </div>
        <div class="col-10">
            <input type="text" class="form-control" asp-for="newItem.ItemPrice" />
        </div>

    </div>
    <div class="row m-2">
        <div class="col-2">
            <label asp-for="newItem.ItemBrand"></label>
        </div>
        <div class="col-10">
            <input type="text" class="form-control" asp-for="newItem.ItemBrand" />
        </div>

    </div>
    <div class="row m-2">
        <div class="col-2">
            <label asp-for="newItem.ItemCategory"></label>
        </div>
        <div class="col-10">
            <select asp-for="newItem.ItemCategory" asp-items="@Model.Categories"></select>
        </div>

    </div>
    <div class="row m-2">
        <div class="col-2">
            <label asp-for="newItem.ItemImage"></label>
        </div>
        <div class="col-10">
            <input type="url" class="form-control" asp-for="newItem.ItemImage" value="https://cdn.shopify.com/s/files/1/0538/2455/3132/products/ufodisckmockup-modified_2048x2048.png?v=1651357323" />
        </div>

    </div>
    <div class="row m-2">
        <div class="col-2">
            <button id="btnAdd" class="btn btn-primary">Add Item</button>
        </div>

    </div>
</form>

