@page
@model DiscGolfWeb.Pages.Tutorials.AdvancedModel
@{
    // Layout = HttpContext.User.Identity.IsAuthenticated ? "_LayoutAuthenticated" : "_Layout";
    string layout;
    if (HttpContext.User.Identity.IsAuthenticated)
    {
        if (HttpContext.User.HasClaim("isAdmin", "True"))
        {
            layout = "_AdminLayout"; // Use the admin layout for users with admin privilege
        }
        else
        {
            layout = "_LayoutAuthenticated"; // Use the regular authenticated layout
        }
    }
    else
    {
        layout = "_Layout"; // Use the default layout for unauthenticated users
    }
    Layout = layout;

    <form class="text-center">
        <label for="category">Skill Level:</label>
        <select name="skillevel" id="skilllevel" onchange="skillLevel(this.value)">
            <option value="0" selected>Select a Skill Level</option>
            <option value="1">Beginner</option>
            <option value="2">Intermediate</option>
            <option value="3">Advanced</option>
        </select>

        <script>
            function skillLevel(value) {
                            if (value == 2) {
                    window.location.href = "/Tutorials/Intermediate";
                }
                else if (value == 1) {
                    window.location.href = "/Tutorials/Beginner";
                }
            }
        </script>
    </form>

    <div class="text-center">
        <h1>Advanced Tutorials</h1>
    </div>
    <div class="text-center">
        <iframe width="840" height="473" src="https://www.youtube.com/embed/RgVGkgnBxuM?si=M4NxIJWZdPX0ouk5" title="Disc Golf Tutorials" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" referrerpolicy="strict-origin-when-cross-origin" allowfullscreen></iframe>
    </div>
    <div class="text-center">
        <iframe width="840" height="473" src="https://www.youtube.com/embed/RgVGkgnBxuM?si=M4NxIJWZdPX0ouk5" title="Disc Golf Tutorials" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" referrerpolicy="strict-origin-when-cross-origin" allowfullscreen></iframe>
    </div>
}

